<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/headPartial.ejs") %>

    <body>
        <%- include("../partials/headerPartial.ejs") %>
            <main>

                <div class="page_title">
                    <h1 class="main_loginForm">Productos</h1>

                </div>

                <div class="page_content">
                    <div class="articles">
                        <% for (product of productsList){%> 

                        <article class="product_article">
                            <div class="product_image">
                                <div class="article_addCart"><a href=""><i class="fa-solid fa-cart-plus"></i></a></div>
                                <div class="article_addWish"><a href=""><i class="fa-solid fa-heart"></i></a></div>
                                <% if (product.offers != "") {%>
                                    <h4 class="article_offerRibbon">Â¡OFERTA!</h4> 
                                <% } %> 
                                <a href="/productos/detalle/<%= product.id %>"><img class="article_img" src="/img productos_weiss/productosImages/<%= product.image %>"  alt="imagen-producto"></a>
                            </div>
                            <div>
                                <p class="article_category"><%= product.category %></p>
                                <a href="/productos/detalle/<%= product.id %>">
                                    <p class="article_name"><%= product.title %></p>
                                </a>
                                <div class="product_price">
                                    <% if (product.offers == "") { %>
                                        <h5 class="article_price">$<%= toThousand(product.price) %></h5>
                                    <% } else if (isNaN(product.offers)) { %>
                                        <h5 class="article_offer"><%=product.offers%></h5> 
                                        <h5 class="article_price">$<%= toThousand(product.price) %></h5>
                                    <% } else { %>
                                        <h5 class="article_offer"><%=product.offers%> % OFF</h5>
                                        <p>$<%= toThousand(product.price) %></p>
                                        <h5 class="article_price">$<%= toThousand(product.price-(product.price*product.offers/100)) %></h5>
                                    <% } %>     
                                </div>
                            </div>
                        </article>
                        <% } %> 



                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>
            </main>


            <%- include("../partials/footerPartial.ejs") %>
    </body>

</html>